page{
  background-color: #24213A;
}
.flex-row{
  display: flex;
  flex-direction: row;
  -webkit-flex-direction: row;
}

.flex-column{
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
}

.flex-sub {
  flex: 1;
}

.align-items-center{
  align-items: center;
}

.justify-center{
  justify-content: center;
}

.fill-width{
  width: 100%;
}
.fill-height{
  height: 100%;
}
.box-sizing-border-box{
  box-sizing: border-box;
}

.space-between{
  justify-content: space-between;
}

.absolute{
  position: absolute;
}

.relative{
  position: relative;
}

button{
  background-color: transparent;
  border-radius: 0;
  padding: 0;
}
button::after{
  border: none;
}

.button-radius{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width:608rpx;
  height:100rpx;
  background:var(--primaryColor);
  border-radius:50rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color: white;
}

.button-after-small-text{
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(96,119,139,1);
  line-height:37rpx;
  margin-top: 35rpx;
}

.button-bottom-view{
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  height: 100rpx;
  width: 100%;
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(254,254,254,1);
  line-height:50rpx;
}

.divide-line-large{
  width:100%;
  height:20rpx;
  background:rgba(246,247,249,1);
}

page{
  --primaryColor:#7265E3;
}
