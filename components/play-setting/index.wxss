.play-setting-dialog-fixed-layout {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 100;
    background-color: rgba(0, 0, 0, 0.3);
    align-items: flex-start;
}

.play-setting-dialog-layout {
    width: 90%;
    background:rgba(37,37,37,0.95);
    box-shadow:0 8rpx 20rpx 0 rgba(0, 0, 0, 0.1);
    border-radius:20rpx;
    padding-left: 46rpx;
    padding-top: 10rpx;
    padding-bottom: 5rpx;
    margin-top: 300rpx;
    transition: opacity ease-in-out var(--animationDuration);
    -webkit-transition: opacity ease-in-out var(--animationDuration);
}

.play-setting-dialog-item{
    padding: 40rpx 46rpx 40rpx 0;
}

.play-setting-dialog-item-title{
    font-size:28rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(221,221,221,1);
    line-height:28rpx;
}


.play-setting-dialog-line{
    width:100%;
    border-bottom: 1rpx solid #373737;
}

.play-setting-dialog-arrow{
    width: 13rpx;
    height: 22rpx;
}

.play-setting-dialog-index-layout{
    width:54rpx;
    height:31rpx;
    background:rgba(89,79,154,1);
    border-radius:16rpx;
    font-size:26rpx;
    font-weight:500;
    color:rgba(255,255,255,1);
    margin-right: 18rpx;
}

.play-setting-dialog-content {
    width: 403rpx;
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(221,221,221,1);
    line-height:44rpx;
    word-break: break-all;
}
